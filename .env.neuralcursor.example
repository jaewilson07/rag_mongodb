# NeuralCursor Second Brain Configuration

# === Neo4j Configuration ===
NEURALCURSOR_NEO4J_URI=bolt://localhost:7687
NEURALCURSOR_NEO4J_USERNAME=neo4j
NEURALCURSOR_NEO4J_PASSWORD=your-password-here
NEURALCURSOR_NEO4J_DATABASE=neo4j

# === MongoDB Configuration ===
NEURALCURSOR_MONGODB_URI=mongodb://localhost:27017
NEURALCURSOR_MONGODB_DATABASE=neuralcursor

# === Local LLM Configuration ===
# Reasoning LLM (GPU 0)
NEURALCURSOR_REASONING_LLM_HOST=http://localhost:8000
NEURALCURSOR_REASONING_LLM_MODEL=deepseek-coder-33b

# Embedding LLM (GPU 1)
NEURALCURSOR_EMBEDDING_LLM_HOST=http://localhost:8001
NEURALCURSOR_EMBEDDING_LLM_MODEL=bge-m3
NEURALCURSOR_EMBEDDING_DIMENSIONS=1024

# === GPU Configuration ===
NEURALCURSOR_GPU_REASONING_DEVICE=cuda:0
NEURALCURSOR_GPU_EMBEDDING_DEVICE=cuda:1
NEURALCURSOR_VRAM_LIMIT_REASONING_GB=20
NEURALCURSOR_VRAM_LIMIT_EMBEDDING_GB=4

# === MemGPT Configuration ===
NEURALCURSOR_MEMGPT_ENABLED=true
NEURALCURSOR_MEMGPT_CORE_MEMORY_SIZE=10000
NEURALCURSOR_MEMGPT_ARCHIVAL_STORAGE=neo4j

# === MCP Server Configuration ===
NEURALCURSOR_MCP_HOST=localhost
NEURALCURSOR_MCP_PORT=8765
NEURALCURSOR_MCP_ENABLED=true

# === File Watcher Configuration ===
NEURALCURSOR_WATCHER_ENABLED=true
NEURALCURSOR_WATCHER_DEBOUNCE_SECONDS=2

# === Project Configuration ===
NEURALCURSOR_PROJECT_ROOT=.
NEURALCURSOR_ACTIVE_PROJECT=neuralcursor

# === Monitoring Configuration ===
NEURALCURSOR_MONITORING_ENABLED=true
NEURALCURSOR_MONITORING_INTERVAL_SECONDS=10
